<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/b2" android:endColor="@android:color/transparent" android:angle="0" android:type="radial" android:gradientRadius="200%p"/>
            <corners android:radius="2dp"/>
            <stroke android:width="3px" android:color="@color/b2"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/b3" android:endColor="@color/b3" android:angle="0"/>
            <corners android:radius="2dp"/>
            <stroke android:width="3px" android:color="@color/b2"/>
        </shape>
    </item>
</selector>
